# FRIDAY AI: Environment Variables Example
# This file shows example values for environment variables
# Copy this to .env and replace with your actual API keys

# =============================================================================
# LIVEKIT CONFIGURATION
# =============================================================================
LIVEKIT_URL=ws://127.0.0.1:7880
LIVEKIT_API_KEY=--------------------
LIVEKIT_API_SECRET=-----------------------------

# =============================================================================
# AI MODEL API KEYS
# =============================================================================
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
GOOGLE_API_KEY=your_primary_google_api_key
GOOGLE_API_KEY_1=your_backup_google_api_key_1
GOOGLE_API_KEY_2=your_backup_google_api_key_2
LLM_MODEL=gemini-2.5-flash

# =============================================================================
# SPEECH & VOICE CONFIGURATION
# =============================================================================
DEEPGRAM_API_KEY=your_deepgram_api_key
CARTESIA_API_KEY=sk_car_your_cartesia_api_key

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_secret_key_for_app_security

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Atlas Configuration (Recommended for Production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=friday_ai
MONGODB_TIMEOUT=10000

# Feature Toggle - Set to false to use local file storage only
USE_MONGODB=true

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================
# Gmail SMTP for notifications (optional)
# GMAIL_APP_PASSWORD=your_gmail_app_password
# GMAIL_USER=your_gmail_address

# Redis for SIP integration
# REDIS_URL=redis://localhost:6379

# Development settings
# DEBUG=false
# LOG_LEVEL=INFO
