# FRIDAY AI: Environment Variables Example
# This file shows example values for environment variables
# Copy this to .env and replace with your actual API keys

# =============================================================================
# LIVEKIT CONFIGURATION
# =============================================================================
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here

# =============================================================================
# AI MODEL API KEYS
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_API_KEY_1=your_google_api_key_1_here
GOOGLE_API_KEY_2=your_google_api_key_2_here
LLM_MODEL=gemini-2.5-flash

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-azure-endpoint.openai.azure.com/
AZURE_OPENAI_LLM_DEPLOYMENT=gpt-4o-mini
OPENAI_API_VERSION=2024-12-01-preview

# =============================================================================
# SPEECH & VOICE CONFIGURATION
# =============================================================================
DEEPGRAM_API_KEY=your_deepgram_api_key_here
CARTESIA_API_KEY=your_cartesia_api_key_here

# Azure OpenAI STT Configuration
AZURE_OPENAI_STT_API_KEY=your_azure_openai_stt_api_key_here
AZURE_OPENAI_STT_API_VERSION=2025-03-01-preview
AZURE_OPENAI_STT_DEPLOYMENT=gpt-4o-transcribe
AZURE_OPENAI_STT_ENDPOINT=https://your-azure-stt-endpoint.cognitiveservices.azure.com/

# Azure OpenAI TTS Configuration
AZURE_OPENAI_TTS_API_KEY=your_azure_openai_tts_api_key_here
AZURE_OPENAI_TTS_API_VERSION=2025-03-01-preview
AZURE_OPENAI_TTS_DEPLOYMENT=gpt-4o-mini-tts
AZURE_OPENAI_TTS_ENDPOINT=https://your-azure-tts-endpoint.cognitiveservices.azure.com/

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_secret_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Atlas Configuration (Recommended for Production)
MONGODB_URI=mongodb+srv://your_mongodb_user:your_mongodb_password@your-cluster.mongodb.net/
MONGODB_DATABASE=friday_ai
MONGODB_TIMEOUT=10000

# Feature Toggle - Set to false to use local file storage only
USE_MONGODB=true

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================
# Gmail SMTP for notifications (optional)
# GMAIL_APP_PASSWORD=your_gmail_app_password_here
# GMAIL_USER=your_gmail_user_here

# Redis for SIP integration
# REDIS_URL=redis://localhost:6379

# Development settings
# DEBUG=false
# LOG_LEVEL=INFO
