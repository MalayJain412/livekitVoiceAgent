# FRIDAY AI: Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# LIVEKIT CONFIGURATION
# =============================================================================
# Choose one: Cloud hosted or self-hosted LiveKit
# For cloud hosted (production):
# LIVEKIT_URL=wss://your-project-name.livekit.cloud
# For self-hosted (development/local):
LIVEKIT_URL=ws://192.168.1.100:7880
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here

# =============================================================================
# PERSONA CONFIGURATION
# =============================================================================
# PERSONA_USE: Choose persona loading mode
# - "api": Load personas from CRM API (dynamic, per dialed number)
# - "local": Use hardcoded prompts from prompts.py (static, consistent)
PERSONA_USE="local"

# Default caller number for API fallback (when no job metadata)
DEFAULT_CALLER="8655701159"

# =============================================================================
# API KEYS
# =============================================================================

# LLM Configurations
GOOGLE_API_KEY=your_primary_google_api_key_here
GOOGLE_API_KEY_1=your_backup_google_api_key_1_here
GOOGLE_API_KEY_2=your_backup_google_api_key_2_here
LLM_MODEL="gemini-2.5-flash"
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_LLM_DEPLOYMENT=gpt-4o-mini
OPENAI_API_VERSION=2024-12-01-preview

# STT Configurations
DEEPGRAM_API_KEY=your_deepgram_api_key_here
ELEVEN_API_KEY=your_eleven_api_key_here
AZURE_OPENAI_STT_API_KEY=your_azure_openai_stt_api_key_here
AZURE_OPENAI_STT_API_VERSION=2025-03-01-preview
AZURE_OPENAI_STT_DEPLOYMENT=gpt-4o-transcribe
AZURE_OPENAI_STT_ENDPOINT=https://your-stt-resource.cognitiveservices.azure.com/

# TTS Configurations
CARTESIA_API_KEY=_your_cartesia_api_key_here
ELEVEN_API_KEY=your_eleven_api_key_here
SARVAM_API_KEY=your_sarvam_api_key_here
AZURE_OPENAI_TTS_API_KEY=your_azure_openai_tts_api_key_here
AZURE_OPENAI_TTS_API_VERSION=2025-03-01-preview
AZURE_OPENAI_TTS_DEPLOYMENT=gpt-4o-mini-tts
AZURE_OPENAI_TTS_ENDPOINT=https://your-tts-resource.cognitiveservices.azure.com/

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your_secret_key_for_app_security_here

# =============================================================================
# EMAIL CONFIGURATION (for sending email notifications)
# =============================================================================
# GMAIL_APP_PASSWORD=your_gmail_app_password_here
# GMAIL_USER=your_gmail_address_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_DATABASE=friday_ai
MONGODB_TIMEOUT=10000
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
USE_MONGODB=true
